<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
  <mapper namespace="com.winter.app.product.ProductDAO">
  
  	<sql id="search">
  	WHERE PRODUCTCONTENTS = '%'||#{search}||'%'
  	</sql>
  
  	<sql id="search2">
  	WHERE
  	<if test="kind='kind1">
  		PRODUCTNAME LIKE = '%'||#{search}||'%'
  	</if>
  	<if test="kind='kind2">
  		PRODUCTCONTENTS LIKE = '%'||#{search}||'%'
  	</if>
  	<if test="kind='kind3'">
  		PRODUCTRATE LIKE = '%'||#{search}||'%'
  	</if>
  	<if test="kind='kind4'">
  		PRODUCTJUMSU LIKE = '%'||#{search}||'%'
  	</if>
  	</sql>
  
  
  	<select id="list" resultType="ProductDTO" parameterType="Pager">
  		SELECT * FROM 
		(SELECT ROWNUM R, PR.* FROM
		(SELECT * FROM PRODUCT 
		
		<include refid="search2"></include>
		
		ORDER BY PRODUCTNUM DESC) PR) 
		WHERE R BETWEEN #{startRow} AND #{lastRow} 
  	</select>
  	
  	<select id="detail" resultType="ProductDTO" parameterType="ProductDTO">
  		SELECT * FROM PRODUCT WHERE PRODUCTNUM=#{productNum}
  	</select>	
  
  	<insert id="add" parameterType="ProductDTO">
  		INSERT INTO PRODUCT VALUES
  		(PRODUCT_SEQ.NEXTVAL,#{productName},
  		#{productContents},#{productRate},#{productJumsu})
  	</insert>
  
  	<delete id="delete" parameterType="ProductDTO">
  		DELETE PRODUCT WHERE PRODUCTNUM=#{productNum}
  	</delete>
  	
  	<update id="update" parameterType="ProductDTO">
  		UPDATE PRODUCT SET PRODUCTNAME=#{productName},
  		PRODUCTCONTENTS=#{productContents},PRODUCTRATE=#{productRate},
  		PRODUCTJUMSU=#{productJumsu} WHERE PRODUCTNUM=#{productNum}
  	</update>
  	
  	<select id="total" resultType="Long">
  		SELECT COUNT(PRODUCTNUM) FROM PRODUCT
  	</select>
  	
  	
  </mapper>